#compdef kv
_arguments -C \
    '(-): :->command' \
    '(-)*:: :->arg'

case $state in
    (command)
        local -a cmds=("${(@f)$(~/src/kv/venv/bin/python ~/src/kv/completion.py list_commands)}")
        _describe 'arguments' cmds
        ;;
    (arg)
        local cmd="${words[1]}"
        local -a opts=("${(@f)$(~/src/kv/venv/bin/python ~/src/kv/completion.py list_keys $cmd)}")
        if [[ $opts != "" ]]; then
            _describe 'keys' opts
        fi
        ;;
esac
